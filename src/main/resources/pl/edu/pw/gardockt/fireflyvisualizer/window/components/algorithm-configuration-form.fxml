<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import pl.edu.pw.gardockt.fireflyvisualizer.window.components.*?>

<fx:root type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" spacing="20.0">
    <VBox.margin>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </VBox.margin>
    <GridPane alignment="CENTER" hgap="10.0" vgap="10.0">
        <columnConstraints>
            <ColumnConstraints minWidth="10.0" prefWidth="270.0" />
            <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
        </rowConstraints>
        <Label text="Rodzaj optymalizacji:" />
        <ChoiceBox fx:id="optimizationModeChoiceBox" prefWidth="162.0" GridPane.columnIndex="1" />
        <Label text="Ilość osobników:" GridPane.rowIndex="1" />
        <TextField fx:id="populationField" prefWidth="162.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Label text="Maks. ilość pokoleń:" GridPane.rowIndex="2" />
        <TextField fx:id="maxGenerationCountField" prefWidth="162.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Label text="Maks. ilość pokoleń bez poprawy (opcj.):" GridPane.rowIndex="3" />
        <TextField fx:id="maxGenerationCountStagnationField" prefWidth="162.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <Label text="Współczynnik pochłaniania światła:" GridPane.rowIndex="4" />
        <TextField fx:id="lightAbsorptionCoefficientField" prefWidth="162.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        <Label text="Atrakcyjność przy zerowej odległości:" GridPane.rowIndex="5" />
        <TextField fx:id="fullAttractivenessField" prefWidth="162.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    </GridPane>
    <RandomnessParameterForm fx:id="randomnessParameterForm" />
</fx:root>
