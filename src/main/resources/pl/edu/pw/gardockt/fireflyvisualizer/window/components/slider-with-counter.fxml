<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>

<fx:root xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" type="javafx.scene.layout.HBox" alignment="TOP_CENTER" spacing="10.0">
    <Slider fx:id="slider" prefHeight="16.0" prefWidth="350.0" />
    <HBox alignment="CENTER" prefWidth="200.0" spacing="5.0">
        <Button fx:id="decrementButton" mnemonicParsing="false" onAction="#onDecrementButtonPressed" text="◀" />
        <TextField fx:id="valueField" alignment="CENTER" text="0" />
        <Button fx:id="incrementButton" mnemonicParsing="false" onAction="#onIncrementButtonPressed" text="▶" />
    </HBox>
</fx:root>